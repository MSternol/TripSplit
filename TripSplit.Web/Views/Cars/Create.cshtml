@model TripSplit.Web.Models.Cars.CarCreateVm
@using TripSplit.Web.UI
@{
    ViewData["Title"] = "Nowe auto";
    Layout = "_Layout";
}

<section class="ts-card">
    <header class="list-head">
        <h2 class="list-title">Dodaj samochód</h2>
        <div class="list-actions">
            <a class="btn btn--soft" asp-action="Index">← Wróć</a>
        </div>
    </header>

    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-12">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="np. Audi A3 1.4 TFSI" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-4 col-12">
                <label asp-for="FuelType" class="form-label"></label>
                <select asp-for="FuelType" class="form-select" asp-items="FuelTypeItems.All()"></select>
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>

            <div class="col-md-4 col-12">
                <label asp-for="AverageConsumptionLper100" class="form-label"></label>
                <input asp-for="AverageConsumptionLper100" class="form-control" type="number" step="0.1" min="0" max="50" placeholder="np. 6,8" />
                <span asp-validation-for="AverageConsumptionLper100" class="text-danger"></span>
            </div>

            <div class="col-md-4 col-12">
                <label asp-for="TankCapacityL" class="form-label"></label>
                <input asp-for="TankCapacityL" class="form-control" type="number" step="0.1" min="0" max="200" placeholder="np. 50,0" />
                <span asp-validation-for="TankCapacityL" class="text-danger"></span>
            </div>
        </div>

        <details class="disclosure card" data-accordion="insurance">
            <summary class="disclosure__summary">
                <input asp-for="IncludeInsurance" class="form-check-input js-toggle-insurance" type="checkbox" />
                <label asp-for="IncludeInsurance" class="form-label mb-0">Dodaj dane OC</label>
            </summary>
            <div class="disclosure__body">
                <partial name="Partials/_InsuranceFields" for="Insurance" />
            </div>
        </details>

        <details class="disclosure card" data-accordion="inspection">
            <summary class="disclosure__summary">
                <input asp-for="IncludeInspection" class="form-check-input js-toggle-inspection" type="checkbox" />
                <label asp-for="IncludeInspection" class="form-label mb-0">Dodaj badanie techniczne</label>
            </summary>
            <div class="disclosure__body">
                <partial name="Partials/_InspectionFields" for="Inspection" />
            </div>
        </details>

        <div class="list-actions mt-3" style="justify-content:flex-end">
            <a class="btn btn--ghost" asp-action="Index">Anuluj</a>
            <button class="btn btn--accent" type="submit">Zapisz</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/car-maintenance-toggle.js" asp-append-version="true"></script>
}
