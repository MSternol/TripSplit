@model TripSplit.Web.Models.Shared.EmptyStateVm
<section class="empty" role="region" aria-labelledby="empty-title">
    <div class="empty__card ts-card" style="text-align:center">
        <div class="empty__art" aria-hidden="true" style="margin-inline:auto;opacity:.9">
            <svg width="180" height="120" viewBox="0 0 180 120" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="14" y="28" width="112" height="70" rx="12" fill="var(--paper)" stroke="var(--line)" />
                <rect x="54" y="18" width="112" height="70" rx="12" fill="var(--paper)" stroke="var(--line)" />
                <circle cx="120" cy="66" r="14" fill="var(--accent)" opacity="0.15" />
                <circle cx="78" cy="58" r="9" fill="var(--accent)" opacity="0.35" />
            </svg>
        </div>

        <h2 id="empty-title" class="empty__title" style="margin-top:8px">@Model.Title</h2>

        @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
        {
            <p class="empty__sub" style="color:var(--muted)">@Model.Subtitle</p>
        }

        <div class="empty__actions" style="display:flex;gap:.6rem;justify-content:center;flex-wrap:wrap;margin-top:10px">
            <a class="btn btn--accent" href="@Model.PrimaryUrl">@Model.PrimaryText</a>
            @if (!string.IsNullOrWhiteSpace(Model.SecondaryText) && !string.IsNullOrWhiteSpace(Model.SecondaryUrl))
            {
                <a class="btn btn--ghost" href="@Model.SecondaryUrl">@Model.SecondaryText</a>
            }
        </div>
    </div>
</section>
