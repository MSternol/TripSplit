@page
@model TripSplit.Web.Areas.Identity.Pages.Account.ForgotPasswordConfirmationModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sprawdź e-mail";
}
<section class="ts-card">
    <h2>Sprawdź e-mail</h2>
    <p>Jeśli konto istnieje i e-mail jest potwierdzony, wysłaliśmy link do resetu hasła.</p>

    @if (!string.IsNullOrWhiteSpace(Model.DevLink))
    {
        <div class="alert alert-info" style="margin-top:10px">
            Środowisko deweloperskie – link testowy:
            <p><a class="btn btn--accent" href="@Model.DevLink">Resetuj hasło</a></p>
        </div>
    }
</section>
