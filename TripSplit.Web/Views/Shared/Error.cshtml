@model TripSplit.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Błąd";
    Layout = "_Layout";
}
<div class="ts-card">
    <h2>Coś poszło nie tak…</h2>
    <p>Wystąpił błąd podczas przetwarzania Twojego żądania.</p>

    @if (Model?.ShowRequestId == true)
    {
        <div class="alert alert-info mt-3">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </div>
    }

    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
    {
        <div class="alert alert-warning mt-3">
            <strong>Tryb deweloperski:</strong> w środowisku <em>Development</em> zobaczysz więcej szczegółów błędu.
            W produkcji nie włączaj tego trybu — może ujawniać wrażliwe dane.
        </div>
    }

    <div class="mt-3">
        <a class="btn ts-btn ts-btn--soft" asp-controller="Trips" asp-action="Index">Wróć do listy przejazdów</a>
        <a class="btn ts-btn ts-btn--brand" asp-controller="Home" asp-action="Index">Strona główna</a>
    </div>
</div>
