@model TripSplit.Web.Models.Trips.TripCreateVm
@{
    ViewData["Title"] = "Nowy przejazd";
    Layout = "_Layout";
}

<section class="ts-card">
    <header class="list-head">
        <div>
            <h2 class="list-title">Nowy przejazd</h2>
            <p class="list-sub">Podaj podstawowe dane trasy i koszty dodatkowe.</p>
        </div>
        <div class="list-actions">
            <a class="btn btn--soft" asp-action="Index">← Wróć</a>
        </div>
    </header>

    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6">
                <label asp-for="StartName" class="form-label"></label>
                <input asp-for="StartName" class="form-control" autocomplete="off" placeholder="np. Kraków" />
                <span asp-validation-for="StartName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EndName" class="form-label"></label>
                <input asp-for="EndName" class="form-control" autocomplete="off" placeholder="np. Gdańsk" />
                <span asp-validation-for="EndName" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="DistanceKm" class="form-label"></label>
                <input asp-for="DistanceKm" type="number" step="0.01" min="0" inputmode="decimal" lang="pl-PL"
                       class="form-control" placeholder="np. 560,5" />
                <span asp-validation-for="DistanceKm" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="FuelPricePerL" class="form-label"></label>
                <input asp-for="FuelPricePerL" type="number" step="0.01" min="0" max="99" inputmode="decimal" lang="pl-PL"
                       class="form-control" placeholder="np. 6,49" />
                <span asp-validation-for="FuelPricePerL" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="AverageConsumptionLper100" class="form-label"></label>
                <input asp-for="AverageConsumptionLper100" type="number" step="0.1" min="0" max="50" inputmode="decimal" lang="pl-PL"
                       class="form-control" placeholder="np. 6,8" />
                <span asp-validation-for="AverageConsumptionLper100" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="PeopleCount" class="form-label"></label>
                <input asp-for="PeopleCount" type="number" step="1" min="1" max="9" inputmode="numeric"
                       class="form-control" placeholder="np. 4" />
                <span asp-validation-for="PeopleCount" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="ParkingCost" class="form-label"></label>
                <input asp-for="ParkingCost" type="number" step="0.01" min="0" max="10000" inputmode="decimal" lang="pl-PL"
                       class="form-control" placeholder="np. 20,00" />
                <span asp-validation-for="ParkingCost" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="ExtraCosts" class="form-label"></label>
                <input asp-for="ExtraCosts" type="number" step="0.01" min="0" max="10000" inputmode="decimal" lang="pl-PL"
                       class="form-control" placeholder="np. 15,00 (autostrada, myjnia)" />
                <span asp-validation-for="ExtraCosts" class="text-danger"></span>
            </div>
        </div>

        <div class="list-actions mt-4">
            <button class="btn btn--accent" type="submit">Zapisz</button>
            <a class="btn btn--ghost" asp-action="Index">Anuluj</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validation-pl.js" asp-append-version="true"></script>
}
